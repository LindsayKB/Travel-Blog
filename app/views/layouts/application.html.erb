<!DOCTYPE html>
<html>
  <head>
    <title>Travel Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
	<%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Bangers|Cedarville+Cursive|Josefin+Slab&display=swap', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
  	<% if current_user %>
  <div class="current-user">Logged in as <%= current_user.email %>.
  <%= link_to "Log Out", logout_path %></div>
<% else %>
  <div class="current-user"><%= link_to "Sign Up", signup_path %> or 
  <%= link_to "Log In", login_path %></div>
<% end %>
          <nav class="navbar navbar-expand-md navbar-light">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Cool Travel Blog.</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to "Home", home_path %></li>
			<li><%= link_to "Create Post", new_post_path %></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
	</header>
	<div class="container">
    <%= yield %>
	<script>
	var els = document.getElementsByClassName("current-user");
		for(var i = 0; i < els.length; i++){
			if(els[i].innerHTML.indexOf("Logged in") > -1){ 
				console.log("Found it!");
			}
			else {
				var userBtns = document.querySelector("#user-actions");
				userBtns.remove();
			}
		}
	</script>
  </body>
</html>
